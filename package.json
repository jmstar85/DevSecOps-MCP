{
  "name": "devsecops-mcp-server",
  "version": "1.0.0",
  "description": "DevSecOps MCP server integrating SAST, DAST, IAST, and SCA tools",
  "main": "dist/src/mcp/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/mcp/server.js",
    "start:mcp": "npm run build && npm start",
    "dev": "ts-node src/mcp/server.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "security:scan": "npm audit --audit-level high"
  },
  "keywords": [
    "mcp",
    "devsecops",
    "security",
    "sast",
    "dast",
    "iast",
    "sca",
    "sonarqube",
    "zap",
    "osv-scanner",
    "trivy",
    "semgrep",
    "owasp"
  ],
  "author": "DevSecOps Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}